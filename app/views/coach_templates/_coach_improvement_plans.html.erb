<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Improvement Plans

    <a data-toggle="collapse" href="#coach_improvement_plans_new_form">
      Add improvement plan
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @coach.improvement_plans.each do |improvement_plan| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/improvement_plans/<%= improvement_plan.id %>">
          <%= improvement_plan.user_id %>
        </a>

        <%if current_user == improvement_plan.user %>
          <a href="/delete_improvement_plan_from_coach/<%= improvement_plan.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="coach_improvement_plans_new_form">
        <%= render partial: "coach_templates/coach_improvement_plans_new_form" %>
      </div>
    </div>

  </ul>
</div>
