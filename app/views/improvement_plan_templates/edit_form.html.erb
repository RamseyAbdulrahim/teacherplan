<h1>
  Edit improvement plan #<%= @improvement_plan.id %>
</h1>

<hr>

<form action="/update_improvement_plan/<%= @improvement_plan.id %>" method="post">


  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @improvement_plan.status %>">
  </div>

  <div class="form-group">
    <label for="comments">
      Comments
    </label>

    <input type="text" id="comments" name="comments" class="form-control" value="<%= @improvement_plan.comments %>">
  </div>

  <div class="form-group">
    <label for="coach_id">
      Coach
    </label>

    <%= select_tag(:coach_id, options_from_collection_for_select(Coach.all, :id, :inviter_id, @improvement_plan.coach_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update improvement plan
  </button>
</form>

<hr>

<a href="/improvement_plans">
  Go back
</a>
