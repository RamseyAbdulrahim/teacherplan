<!-- Form goal start -->
<form action="/create_goal_from_improvement_plan" method="post">
<!-- Form goal end -->

  <!-- Label and input for comments start -->
  <div class="form-group">
    <label for="comments">
      Comments
    </label>

    <!-- Input for comments start -->
    <input type="text" id="comments" name="comments" class="form-control" value="<%= @goal.comments %>">
    <!-- Input for comments end -->
  </div>
  <!-- Label and input for comments end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @goal.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for plan_id start -->
  <!-- Input for plan_id start -->
  <input type="hidden" name="plan_id" value="<%= @improvement_plan.id %>">
  <!-- Input for plan_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create goal
  </button>
</form>
