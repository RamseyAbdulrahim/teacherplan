<% if @action_step.present? %>
  <% if @action_step.errors.any? %>
    <% @action_step.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new action step
</h1>


<hr>

<form action="/create_action_step" method="post">

  <div class="form-group">
    <label for="goal_id">
      Goal
    </label>

    <%= select_tag(:goal_id, options_from_collection_for_select(Goal.all, :id, :comments, @action_step.goal_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="timeline">
      Timeline
    </label>

    <input type="text" id="timeline" name="timeline" class="form-control" value="<%= @action_step.timeline %>">
  </div>

  <div class="form-group">
    <label for="lead_persons">
      Lead persons
    </label>

    <input type="text" id="lead_persons" name="lead_persons" class="form-control" value="<%= @action_step.lead_persons %>">
  </div>

  <div class="form-group">
    <label for="resources_needed">
      Resources needed
    </label>

    <input type="text" id="resources_needed" name="resources_needed" class="form-control" value="<%= @action_step.resources_needed %>">
  </div>

  <div class="form-group">
    <label for="specifics_of_implementation">
      Specifics of implementation
    </label>

    <input type="text" id="specifics_of_implementation" name="specifics_of_implementation" class="form-control" value="<%= @action_step.specifics_of_implementation %>">
  </div>

  <div class="form-group">
    <label for="measures_of_success">
      Measures of success
    </label>

    <input type="text" id="measures_of_success" name="measures_of_success" class="form-control" value="<%= @action_step.measures_of_success %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create action step
  </button>
</form>

<hr>

<a href="/action_steps">
  Go back
</a>
